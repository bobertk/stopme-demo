<%= form_for(@micropost) do |f| %>
	 <%= render 'shared/error_messages', object: f.object %>
   <div class="field">    	
    <%= f.text_area :content, cols: 35, rows: 4, max_size: 140, placeholder: "Compose new micropost..." %>
  </div> 
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>